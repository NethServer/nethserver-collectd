{
   use esmith::NetworksDB;
   my $hosts = $collectd{'PingHosts'} || '';
   my $dns = $dns{'NameServers'} || '';
   my $ndb = esmith::NetworksDB->open_ro() || return '';

   $OUT .= "<Plugin \"ping\">\n";
   $OUT .= "Interval 5\n";
   $OUT .= "MaxMissed 30\n";
   foreach (split(/,/,$hosts)) {
      $OUT .= "Host \"$_\"\n";
   }
   if ($dns ne '') {
       my @ns = split(/,/,$dns);
       $OUT .= "Host $ns[0]\n";
   }
   $OUT .= "</Plugin>\n";
}
